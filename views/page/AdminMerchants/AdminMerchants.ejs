                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="text-center mb-3">
                                <img id="userImagePreview" src="/img/userimage.jpg" alt="User Image" class="img-thumbnail rounded" style="width: 200px; height: 200px; object-fit: cover;">
                                <br><br>
                                <input type="file" class="form-control" id="addmerchantimg" name="addmerchantimg" accept="image/*">
                                <label for="addmerchantimg" class="form-label">Upload Merchant Image</label>
                            </div>
                        </div>

                        <!-- Hub Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addbusinessname" name="addbusinessname" placeholder="Business Name">
                                <label for="addbusinessname">Business Name</label>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select border-form-modal" id="addmerchtype" name="addmerchtype">
                                    <option value="Restaurant">Restaurant</option>
                                    <option value="Convinience Store">Convinience Store</option>
                                    <option value="Fast Food">Fast Food</option>
                                </select>
                                <label for="addmerchtype">Merchant Type</label>
                            </div>
                        </div>

                        <!-- Owner Name-->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addbranch" name="addbranch" placeholder="Branch Name">
                                <label for="addbranch">Business Branch</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addowner" name="addowner" placeholder="Merchant Owner">
                                <label for="addowner">Business Owner</label>
                            </div>
                        </div>

                        <!-- Hub Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addmerchaddress" name="addmerchaddress" placeholder="Merchant Address">
                                <label for="addmerchaddress">Merchant Address</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addlatitude" name="addlatitude" placeholder="Latitude Address">
                                <label for="addlatitude">Latitude Address</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addlongitude" name="addlongitude" placeholder="Longitude Address">
                                <label for="addlongitude">Longitude Address</label>
                            </div>
                        </div>

                        <!-- Hub Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addcpnumber" name="addcpnumber" placeholder="Phone Number">
                                <label for="addcpnumber">Phone Number</label>
                            </div>
                        </div>

                        <!-- Email Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-form-modal" id="addemail" name="addemail" placeholder="Email">
                                <label for="addemail">Email</label>
                            </div>
                        </div>

                        <!-- Qr Code -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="file" class="form-control" id="addqrcode" name="addqrcode" accept="image/*">
                                <label for="addqrcode">Upload QR Code</label>
                            </div>
                        </div>

                         <!-- Username -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addusername" name="addusername" placeholder="Username">
                                <label for="addusername">Username</label>
                            </div>
                        </div>

                        <!-- Password Field with Eye Icon -->
                        <div class="col-md-6">
                            <div class="form-floating position-relative">
                                <input type="password" class="form-control border-form-modal" id="addpassword" name="addpassword" placeholder="Password">
                                <label for="addpassword">Password</label>
                                <!-- Eye Icon -->
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" id="togglePassword" style="cursor: pointer;">
                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                </span>                                
                            </div>
                        </div>

                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn lagona_class-btn btn-modal-save" id="saveMerchantBtn">Save</button>
            </div>
        </div>
    </div>
</div>


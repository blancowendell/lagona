<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>Loading Stations</h6>
                <!-- Dropdowns and Filter Button -->
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <select class="form-select form-select-sm" id="filterDropdown1">
                            <option value="">Select Option 1</option>
                            <option value="option1">Option 1</option>
                            <option value="option2">Option 2</option>
                        </select>
                    </div>
                    <div class="me-2">
                        <select class="form-select form-select-sm" id="filterDropdown2">
                            <option value="">Select Option 2</option>
                            <option value="option1">Option 1</option>
                            <option value="option2">Option 2</option>
                        </select>
                    </div>
                    <button class="btn lagona_class-btn btn-sm" data-bs-toggle="modal" data-bs-target="#addBusinessHubModal">
                        Add
                    </button>                    
                </div>
            </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0" id="dataTableBusinessHubs">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Hub Code</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Hub Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Owner</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Email</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Phone Number</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Status</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Register Date</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Action</th>
                    </tr>             
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addBusinessHubModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="exampleModalLabel">Add Business Hub</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <!-- <div class="col-12">
                            <div class="text-center mb-3">
                                <img id="userImagePreview" src="/img/userimage.jpg" alt="User Image" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                                <br><br>
                                <input type="file" class="form-control" id="edituserimage" name="edituserimage" accept="image/*">
                                <label for="edituserimage" class="form-label">Upload Profile Image</label>
                            </div>
                        </div> -->

                        <!-- Hub Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addhubname" name="addhubname" placeholder="Hub Name">
                                <label for="addhubname">Hub Name</label>
                            </div>
                        </div>

                        <!-- Owner Name-->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addownername" name="addownername" placeholder="Owner Name">
                                <label for="addownername">Owner Name</label>
                            </div>
                        </div>

                        <!-- Hub Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addhubadress" name="addhubadress" placeholder="Hub Address">
                                <label for="addhubadress">Hub Address</label>
                            </div>
                        </div>

                        <!-- Hub Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addcpnumber" name="addcpnumber" placeholder="Phone Number">
                                <label for="addcpnumber">Phone Number</label>
                            </div>
                        </div>

                        <!-- Email Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-form-modal" id="addemail" name="addemail" placeholder="Email">
                                <label for="addemail">Email</label>
                            </div>
                        </div>

                        <!-- School Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-moda" id="addstartbudget" name="addstartbudget" placeholder="Starting Budget"
                                oninput="formatPrice(event, this)">
                                <label for="addstartbudget">Starting Budget</label>
                            </div>
                        </div>
                        

                         <!-- Username -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addusername" name="addusername" placeholder="Username">
                                <label for="addusername">Username</label>
                            </div>
                        </div>

                        <!-- Password Field with Eye Icon -->
                        <div class="col-md-6">
                            <div class="form-floating position-relative">
                                <input type="password" class="form-control border-form-modal" id="addpassword" name="addpassword" placeholder="Password">
                                <label for="addpassword">Password</label>
                                <!-- Eye Icon -->
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" id="togglePassword" style="cursor: pointer;">
                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                </span>                                
                            </div>
                        </div>

                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn lagona_class-btn btn-modal-save" id="savehubbtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editBusinessHubModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="editModalLabel">Edit Business Hub</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="text-center mb-3">
                                <label class="fw-bold">Remaining Budget</label>
                                <h3 id="startingBudgetDisplay" class="fw-bold text-success">₱0.00</h3>
                            </div>
                        </div>

                        <!-- Hub Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="editHubName" name="editHubName" placeholder="Hub Name" value="Existing Hub Name">
                                <label for="editHubName">Hub Name</label>
                            </div>
                        </div>

                        <!-- Owner Name-->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="editOwnerName" name="editOwnerName" placeholder="Owner Name" value="Existing Owner Name">
                                <label for="editOwnerName">Owner Name</label>
                            </div>
                        </div>

                        <!-- Hub Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="editHubAddress" name="editHubAddress" placeholder="Hub Address" value="Existing Hub Address">
                                <label for="editHubAddress">Hub Address</label>
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="editPhoneNumber" name="editPhoneNumber" placeholder="Phone Number" value="Existing Phone Number">
                                <label for="editPhoneNumber">Phone Number</label>
                            </div>
                        </div>

                        <!-- Email Address -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-form-modal" id="editEmail" name="editEmail" placeholder="Email" value="Existing Email Address">
                                <label for="editEmail">Email</label>
                            </div>
                        </div>

                        <!-- Starting Budget -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="registerdate" name="registerdate" readonly>
                                <label for="registerdate">Register Date</label>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="editUsername" name="editUsername" placeholder="Username" value="existing_username">
                                <label for="editUsername">Username</label>
                            </div>
                        </div>

                        <!-- Password Field with Eye Icon -->
                        <div class="col-md-6">
                            <div class="form-floating position-relative">
                                <input type="password" class="form-control border-form-modal" id="editPassword" name="editPassword" placeholder="Password" value="existing_password">
                                <label for="editPassword">Password</label>
                                <!-- Eye Icon -->
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" id="togglePasswordEdit" style="cursor: pointer;">
                                    <i class="fas fa-eye" id="eyeIconEdit"></i>
                                </span>                                 
                            </div>
                        </div>
                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn lagona_class-btn btn-modal-save" id="saveEditHubBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>


<!--Top Up Modal -->
<div class="modal fade" id="topUpModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                    colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="topuphubcode"></h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="text-center mb-3">
                                <label class="fw-bold">Remaining Budget</label>
                                <h3 id="remainingBalance" class="fw-bold text-success">₱0.00</h3>
                            </div>
                        </div>

                        <!-- Top Up Amount -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-moda" id="topupamount" name="topupamount" placeholder="Top Up Amount"
                                    oninput="formatPrice(event, this)">
                                <label for="topupamount">Enter Amount Here</label>
                            </div>
                        </div>

                        <!-- Add Amount Button -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <button type="button" class="btn lagona_class-btn btn-modal-save" id="saveTopUpHubBtn">Add Amount</button>
                            </div>
                        </div>

                        <div class="col-12">
                            <h5 class="fw-bold text-center mt-3">Top-Up History</h5>
                            
                            <div class="input-group mb-3">
                                <input
                                    type="text"
                                    class="form-control"
                                    id="searchTopUpHistory"
                                    placeholder="Search by Reference Code or Amount"
                                    aria-label="Search"
                                />
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-bordered table-striped text-center">
                                    <thead class="lagona_class-btn">
                                        <tr>
                                            <th>Reference Code</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="topUpHistoryBody">
                                    </tbody>
                                </table>
                            </div>
                        </div>                        
                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




                    });
                  } else {
                    toastr.error("Error fetching top-up history", "Error");
                  }
                },
                error: function (err) {
                  toastr.error(
                    "An error occurred while fetching top-up history",
                    "Error"
                  );
                },
              });
            } else {
              toastr.error("Error fetching hub data", "Error");
            }
          },

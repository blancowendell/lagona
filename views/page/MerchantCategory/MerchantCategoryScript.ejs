    $(document).ready(function () {
      LoadTable();
  
      function LoadTable() {
        $("#dataTableCategories").DataTable({
          destroy: true,
          processing: true,
          serverSide: true,
          paging: false,
          searching: false,
          info: false,
          scrollY: 600,
          scrollCollapse: true,
          serverMethod: "GET",
          ajax: {
            url: "/MerchantCategory/load",

<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>Top Up Requests</h6>
                <div class="d-flex align-items-center justify-content-between">
                    <button class="btn lagona_class-btn btn-sm" data-bs-toggle="modal" data-bs-target="#addtopupModal">
                        Requests Top Up
                    </button>   
                    <div class="d-flex align-items-center ms-auto">
                        <div class="text-center">
                            <label class="fw-bold">Remaining Budget</label>
                            <h3 id="budget" class="fw-bold text-success">₱0.00</h3>
                        </div>
                    </div>
                </div>                
            </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0" id="dataTableTopUp">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Date Requested</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Rider Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Amount</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Status</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Action</th>
                    </tr>             
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addtopupModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="exampleModalLabel">Add Extra</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="text-center mb-3">
                                <img id="userImagePreview" src="/img/userimage.jpg" alt="User Image" class="img-thumbnail rounded" style="width: 200px; height: 200px; object-fit: cover;">
                                <br><br>
                                <input type="file" class="form-control" id="addimage" name="addimage" accept="image/*">
                                <label for="addimage" class="form-label">Upload Extra Image</label>
                            </div>
                        </div>

                        <!-- Hub Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-modal" id="addcomboname" name="addcomboname" placeholder="Business Name">
                                <label for="addcomboname">Extra Name</label>
                            </div>
                        </div>

                        <!-- Owner Name-->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-form-moda" id="topupamount" name="topupamount" placeholder="Top Up Amount"
                                    oninput="formatPrice(event, this)">
                                <label for="topupamount">Enter Amount Here</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-floating">
                                <textarea class="form-control border-form-modal" id="addDescription" name="addDescription" placeholder="Description"></textarea>
                                <label for="addDescription">Combo Description</label>
                            </div>
                        </div>
                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn lagona_class-btn btn-modal-save" id="saveComboBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="viewTopUpModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="modal-header">
                <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
                colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
                <h3 class="modal-title" id="exampleModalLabel">Approve Top Up</h3>
                <i class='bx bx-x' data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-center mb-3">
                                <img id="viewUserImagePreview" src="/img/userimage.jpg" alt="User Image" class="img-thumbnail rounded" style="width: 400px; height: 400px; object-fit: cover;">
                                <br><br>
                                <label for="editaddimage" class="form-label">Upload File Image</label>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="text-center mb-3">
                                <label class="fw-bold">Top Up Amount</label>
                                <h3 id="ridertopupamount" class="fw-bold text-success">₱0.00</h3>
                            </div>
                            <br>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-form-modal" id="ridername" name="ridername" placeholder="Rider Name" disabled>
                                    <label for="ridername">Rider Name</label>
                                </div>
                            </div>
                            <br>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-form-modal" id="ridercode" name="ridercode" placeholder="Rider Code" disabled>
                                    <label for="ridercode">Rider Code</label>
                                </div>
                            </div>
                            <br>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-form-modal" id="requestdate" name="requestdate" placeholder="Request Date"disabled>
                                    <label for="requestdate">Request date</label>
                                </div>
                            </div>
                            <br>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <select class="form-select border-form-modal" id="topupstatus" name="topupstatus">
                                        <option value="Approved" class="text-success">Approve</option>
                                        <option value="Rejected" class="text-danger">Reject</option>
                                    </select>
                                    <label for="topupstatus">Status</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn lagona_class-btn btn-modal-save" id="topupSaveBtn">Save</button>
            </div>
        </div>
    </div>
</div>


